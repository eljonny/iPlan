<Window x:Class="GUIProj1.Window1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="iPlan" Height="540" Width="955" Name="iPlanMain" MaxHeight="540"
        WindowStartupLocation="CenterScreen" MinWidth="955" MinHeight="540"
        MaxWidth="955">
    <!-- Main window grid that holds buttons/text/calander grid/etc -->
        <Grid Height="510" Width="950" HorizontalAlignment="Left" Margin="5"
              VerticalAlignment="Top">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="110*" />
            <ColumnDefinition Width="846*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="45*" />
            <RowDefinition Height="435*" />
        </Grid.RowDefinitions>
            <Menu Name="fileMenu"
                  AllowDrop="True" FontFamily="Verdana"
                  FontSize="18" FontWeight="bold" Width="50" HorizontalAlignment="Left"
                  Margin="3,5,0,13.885">
                <MenuItem Header="_File">
                    <MenuItem Header="_New Calendar" />
                    <MenuItem Header="New _Team Member" />
                    <MenuItem Header="_Open Calendar" />
                    <MenuItem Header="O_pen Team Member" />
                    <MenuItem Header="_Save Calendar" />
                    <MenuItem Header="S_ave Calendar As..." />
                    <MenuItem Header="Sa_ve Team Member..." />
                    <Separator />
                    <MenuItem Header="_Quit" Click="file_quit" />
                </MenuItem>
            </Menu>
            <Menu AllowDrop="True" IsMainMenu="True" Name="optionMenu"
                  Width="50" FontFamily="Verdana" FontSize="18" FontWeight="bold"
                  HorizontalAlignment="Right" Margin="0,5,3,13.885">
                <MenuItem Header="_Opt">
                    <MenuItem Header="_View Mode" />
                    <MenuItem Header="_Edit Mode" />
                    <MenuItem Header="Edit _Team Member" />
                    <MenuItem Header="Team Member _Details" />
                    <MenuItem Header="Eve_nt Details" />
                    <Separator/>
                    <MenuItem Header="C_ustomize" />
                </MenuItem>            
            </Menu>
                
            <Button Height="50" Name="saveCalButton" VerticalAlignment="Top"
                    FontFamily="Verdana" FontSize="13" Margin="3,5,5,0"
                Grid.Row="1">
            Save Calendar
            </Button>
            <Button Height="50" Name="propCalButton" VerticalAlignment="Top"
                    FontFamily="Verdana" FontSize="13" Margin="3,60,5,0"
                    Grid.Row="1">
                Properties
            </Button>
            <Button Height="50" Name="schedCalButton" VerticalAlignment="Top"
                            FontFamily="Verdana" FontSize="13" Margin="3,115,5,0"
                            Grid.Row="1">
                Sched. Details
            </Button>
            <Button Height="50" Name="membersCalButton" VerticalAlignment="Top"
                    FontFamily="Verdana" FontSize="13" Margin="3,170,5,0"
                    Grid.Row="1">
                Participants
            </Button>
            <Button Height="50" Name="notifyCalButton" VerticalAlignment="Top"
                        FontFamily="Verdana" FontSize="13" Margin="3,225,5,0"
                        Grid.Row="1">
                Notifications
            </Button>
            <Button Height="50" Name="viewModeCalButton" VerticalAlignment="Top"
                            FontFamily="Verdana" FontSize="13" Margin="3,280,5,0"
                            Grid.Row="1">
                View Mode
            </Button>
            <Button Height="50" Name="resetCalButton" VerticalAlignment="Top"
                            FontFamily="Verdana" FontSize="13" Margin="3,335,5,0"
                            Grid.Row="1">
                Reset Values
            </Button>
            <Label Name="label2" Margin="0,10,210,0" Width="95"
                HorizontalAlignment="Right" Grid.Column="1">
                Times Available:
            </Label>
            <TextBox Name="startTime" Width="80" Margin="0,11,128,12"
                HorizontalAlignment="Right" Text="hh:mm" TextAlignment="Center"
                     Grid.Column="1" Height="25" />
            <Label Name="labelBtwnTimes" Width="30" Margin="0,10,98,12.885"
                HorizontalAlignment="Right" Grid.Column="1">
                to 
            </Label>
            <TextBox Name="EndTime" Width="80" Margin="0,11,25,12"
                HorizontalAlignment="Right" Text="hh:mm" TextAlignment="Center"
                     Grid.Column="1" />
            <Border Margin="-6,-12,0,10.948" Name="mainGridBorder" Grid.RowSpan="2"
                HorizontalAlignment="Left" Width="2" />
        <ScrollViewer Name="calGridContainer" Grid.Column="1" Grid.Row="1"
                Margin="0,3.208,25,51" Padding="1,1,1,1" CanContentScroll="True">
        <!--
            <Border Margin="-6,-12,0,10.948" Name="mainGridBorder" Grid.RowSpan="2"
                HorizontalAlignment="Left" Width="2" />
            -->
